{% if pizza.ingredients is defined %}
    {% if ingredients|length != pizza.ingredients|length %}
        {% for ingredient in ingredients %}
            {{ ingredient.name }} -
            {% if ingredient in pizza.ingredients %}
                Added in pizza -
                <a href="javascript:removeIngredient({{ pizza.id }},{{ ingredient.id }});">
                    Remove ingredient
                </a>
            {% else %}
                <a href="javascript:addIngredient({{ pizza.id }},{{ ingredient.id }});">
                    Add to pizza
                </a>
            {% endif %}
            <br />
        {% endfor %}
    {% else %}
        No ingredients to add.<br />
        <br />
        Pizza ingredients:<br />
        {% for ingredient in pizza.ingredients %}
            - {{ ingredient.name }} -
            <a href="javascript:removeIngredient({{ pizza.id }},{{ ingredient.id }});">
                Remove ingredient
            </a><br />
        {% endfor %}
    {% endif %}
{% endif %}